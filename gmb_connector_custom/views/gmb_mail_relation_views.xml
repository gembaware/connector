<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="gmb_mail_relation_action" model="ir.actions.act_window">
        <field name="name">Mails</field>
        <field name="res_model">gmb.mail.relation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="gmb_mail_relation_view_tree" model="ir.ui.view">
        <field name="name">gmb.mail.relation.tree</field>
        <field name="model">gmb.mail.relation</field>
        <field name="arch" type="xml">
            <tree create="False">
                <field name="name"/>
                <field name="date_mail"/>
                <field name="destinataire"/>
                <field name="body"/>
            </tree>
        </field>
    </record>

    <record id="gmb_mail_relation_view_form" model="ir.ui.view">
        <field name="name">gmb.mail.relation.form</field>
        <field name="model">gmb.mail.relation</field>
        <field name="arch" type="xml">
            <form name="mail_relation" create="False">
                <header>
                    <button name="action_MER" string="Analyser" type="object"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <field name="destinataire"/>
                        <field name="date_mail"/>
                    </group>
                    <field name="body"/>
                    <notebook>
                        <page name="Relations">
                            <field name="relations"/>
                        </page>
                        <page name="Analyse">
                            <field name="analyzed" invisible="1"/>
                            <span invisible="analyzed" class="text-warning">
                                Ce mail n'as pas encore été analysé. Cliquez sur Analyser pour lancer l'analyse.
                            </span>
                            <group>
                                <field name="analyze_response" invisible="not analyzed"/>
                            </group>
                        </page>

                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="gmb_mail_relation_view_search" model="ir.ui.view">
        <field name="name">gmb.mail.relation.search</field>
        <field name="model">gmb.mail.relation</field>
        <field name="arch" type="xml">
            <search>
                <field name="destinataire"/>
                <field name="date_mail"/>
            </search>
        </field>
    </record>
</odoo>